{
  "compilerOptions": {
    "skipLibCheck": true,
    "incremental": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "jsx": "react",
    "forceConsistentCasingInFileNames": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": false,
    "baseUrl": ".",
    "rootDir": "."
  },
  "include": ["./build/**/*.ts", "./editor/**/gulpfile.ts"],
  "exclude": ["node_modules", "dist", "*timestamp*", "*js"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
